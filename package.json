{
  "name": "twenty-crm-mcp-server",
  "version": "0.6.0",
  "description": "A Model Context Protocol (MCP) server for Twenty CRM integration. Enables natural language interactions with your CRM data through Claude and other AI assistants.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "twenty-crm-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "prebuild": "rm -rf dist",
    "prestart": "npm run build",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "dotenv": "^17.2.3"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp",
    "twenty",
    "crm",
    "server",
    "claude",
    "ai",
    "assistant",
    "natural-language",
    "api",
    "integration"
  ],
  "author": "Konstantin Doll",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KonstiDoll/twenty-crm-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/KonstiDoll/twenty-crm-mcp-server/issues"
  },
  "homepage": "https://github.com/KonstiDoll/twenty-crm-mcp-server#readme",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
